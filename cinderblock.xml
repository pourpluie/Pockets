<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="Pockets"
	id="com.sansumbrella.pockets"
	author="David Wicks"
	summary="What have I got in my pockets?"
	>
	<!-- Pockets -->
	<headerPattern>src/pockets/*.h</headerPattern>
	<sourcePattern>src/pockets/*.cpp</sourcePattern>
	<header>src/pockets/Pockets.h</header>
	<!-- cobweb -->
	<headerPattern>src/pockets/cobweb/*.h</headerPattern>
	<sourcePattern>src/pockets/cobweb/*.cpp</sourcePattern>
	<!-- physics (needs a cute name; maybe make part of cobweb) -->
	<headerPattern>src/pockets/physics/*.h</headerPattern>
	<sourcePattern>src/pockets/physics/*.cpp</sourcePattern>
	<!-- PupTent -->
	<headerPattern>src/pockets/puptent/*.h</headerPattern>
	<sourcePattern>src/pockets/puptent/*.cpp</sourcePattern>
	<header>src/pockets/Pockets.h</header>
	<!-- entityx for PupTent -->
	<headerPattern>src/thirdparty/entityx/*.h</headerPattern>
	<sourcePattern>src/thirdparty/entityx/*.cc</sourcePattern>
	<includePath system="false">src</includePath>
	<includePath system="false">src/thirdparty</includePath>
</block>
</cinder>
